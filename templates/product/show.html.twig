{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 class="h1 mb-3 font-weight-normal text-center my-5">Produit : {{ product.name }}</h1>

    <table class="table m-5">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Quantitée</th>
                <td>{{ product.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_product_index') }}" class="btn btn-secondary ms-5"><i class="fa-solid fa-arrow-left"></i> Revenir en arrière</a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-custom ms-3"><i class="fa-solid fa-screwdriver-wrench"></i> modifier</a>

    </div>

    <div class="ms-5">
        {{ include('product/_delete_form.html.twig') }}
    </div>

{% endblock %}

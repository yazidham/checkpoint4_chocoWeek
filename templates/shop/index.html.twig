{% extends 'base.html.twig' %}

{% block title %}ChocoShop !{% endblock %}

{% block body %}
    <h1 class="page-title my-5">ChocoShop</h1>

    <div class="d-flex justify-content-around">
        {% for product in products %}
            <div class="card card-info">
                <div class="card-body">
                    <h5 class="card-title">{{ product.quantity }} x <i class="fa fa-ticket golden-ticket"></i> {{ product.name }}</h5>
                    <p class="card-text">Equivaut Ã  {{ product.quantity }} inscription gratuite
                        pour un tirage de la chocoweek</p>

                    <h6 class="card-subtitle mb-2">Prix : <strong>{{ product.price }} </strong> <i class="fa-sharp fa-solid fa-coins golden-ticket"></i> ChocoCoins
                    </h6>
                    <div class="mt-5">
                        {% if app.user.numberOfCoins >= product.price %}
                            <a href="{{ path('app_buy_product', { productId : product.id}) }}" class="btn btn-primary">Acheter</a>
                        {% else %}
                            <p class="text-warning">vous n'avez pas assez de ChocoCoins</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
